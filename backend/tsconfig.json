{
    "compilerOptions": {
        "target": "ES6",                              
        "module": "commonjs",                         
        "rootDir": "./src",                           
        "moduleResolution": "node",                   
        "outDir": "./dist",  
        "resolveJsonModule": true,                         
        "esModuleInterop": true,                      
        "forceConsistentCasingInFileNames": true,     
        "strict": true,                               
        "skipLibCheck": true                         
    },
    "include": [
        "./src/**/*",
        "src/types/**/*.d.ts",
        "src/types/index.d.ts"    
    ],
    "exclude": ["node_modules"]
}